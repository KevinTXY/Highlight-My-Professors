{
"name": "RMP",
"version":"1.0",
"description": "RMP Extension",
"manifest_version": 2,
"options_ui":{
  "page": "index.html",
  "open_in_tab":false
},
"background":{
    "scripts": ["background.js"],
    "persistent": false
},

  "permissions":[
    "activeTab",
    "storage",
      "tabs",
      "webNavigation",
      "*://*/*"

    ],

    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js":["app.js"],
        "run_at": "document_idle"
      }
    ],
    "incognito": "split"

}
